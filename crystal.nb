  Table[Table[Table[Sphere[{i, j, k}, r], {i, 0, n}], {j, 0, m}], {k, 
    0, l}];
body = Table[
   Table[Table[
     Sphere[{i + 0.5, j + 0.5, k + 0.5}, r], {i, 0, n - 1}], {j, 0, 
     m - 1}], {k, 0, l - 1}];
face = Join[
   Table[Table[
     Table[Sphere[{i + 0.5, j + 0.5, k}, r], {i, 0, n - 1}], {j, 0, 
      m - 1}], {k, 0, l}], 
   Table[Table[
     Table[Sphere[{i, j + 0.5, k + 0.5}, r], {i, 0, n}], {j, 0, 
      m - 1}], {k, 0, l - 1}], 
   Table[Table[
     Table[Sphere[{i + 0.5, j, k + 0.5}, r], {i, 0, n - 1}], {j, 0, 
      m}], {k, 0, l - 1}]];
ion1 = Join[
   Table[Table[
     Table[Sphere[{i, j, k}, r], {i, 0, n - 1}], {j, 0, m - 1}], {k, 
     0, l - 1}], 
   Table[Table[
     Table[Sphere[{i + 1/2, j + 1/2, k}, r], {i, 0, n - 1}], {j, 0, 
      m - 1}], {k, 0, l - 1}], 
   Table[Table[
     Table[Sphere[{i + 1/2, j, k + 1/2}, r], {i, 0, n - 1}], {j, 0, 
      m - 1}], {k, 0, l - 1}], 
   Table[Table[
     Table[Sphere[{i, j + 1/2, k + 1/2}, r], {i, 0, n - 1}], {j, 0, 
      m - 1}], {k, 0, l - 1}]];
ion2 = Join[
   Table[Table[
     Table[Sphere[{i + 1/2, j + 1/2, k + 1/2}, r], {i, 0, n - 1}], {j,
       0, m - 1}], {k, 0, l - 1}], 
   Table[Table[
     Table[Sphere[{i + 1/2, j, k}, r], {i, 0, n - 1}], {j, 0, 
      m - 1}], {k, 0, l - 1}], 
   Table[Table[
     Table[Sphere[{i, j + 1/2, k}, r], {i, 0, n - 1}], {j, 0, 
      m - 1}], {k, 0, l - 1}], 
   Table[Table[
     Table[Sphere[{i, j, k + 1/2}, r], {i, 0, n - 1}], {j, 0, 
      m - 1}], {k, 0, l - 1}]];
